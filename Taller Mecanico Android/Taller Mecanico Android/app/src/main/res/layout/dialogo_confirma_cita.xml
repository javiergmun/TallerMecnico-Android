<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardBackgroundColor="#D2000000"
    app:cardElevation="15dp"
    android:layout_height="230dp"
    android:layout_margin="1dp"
    app:cardCornerRadius="30dp"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >


        <TextView
            android:id="@+id/tvConfirmaCita"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinslight"
            android:text="@string/se_le_concertar_una_cita_para_el_servicio_servicio_para_el_fecha_a_las_hora"
            android:textAlignment="center"
            android:textColor="#FAFAFA"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.22000003" />


        <TextView
            android:id="@+id/tvConfirma"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinslight"
            android:text="@string/confirmar_cita"
            android:textAlignment="center"
            android:textColor="@color/Blanco_fondo"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvConfirmaCita"
            app:layout_constraintVertical_bias="0.23000002" />

        <Button

            android:id="@+id/aceptar"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:fontFamily="@font/poppinslight"
            android:gravity="center"
            android:hint="@string/ok"
            android:backgroundTint="@color/Rojo"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="#E1BEE7"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvConfirma"
            app:layout_constraintVertical_bias="0.30"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/cancelar"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/Rojo"
            android:fontFamily="@font/poppinslight"
            android:gravity="center"
            android:hint="@string/cancelar"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="#E1BEE7"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.76"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvConfirma"
            app:layout_constraintVertical_bias="0.30"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
