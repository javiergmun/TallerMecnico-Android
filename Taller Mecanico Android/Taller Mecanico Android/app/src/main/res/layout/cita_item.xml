<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/Blanco_fondo"
    app:cardElevation="15dp"
    android:layout_height="90dp"
    android:layout_margin="1dp"
    app:cardCornerRadius="20dp"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="347dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp">


        <TextView
            android:id="@+id/nombreMecanico"
            android:layout_width="221dp"
            android:layout_height="48dp"
            android:fontFamily="@font/poppins"
            android:inputType="textPersonName"
            android:text="MecÃ¡nico 1"
            android:textColor="#8B1C1F"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.24000001" />


        <TextView
            android:id="@+id/horaDisponible"
            android:layout_width="221dp"
            android:layout_height="48dp"
            android:fontFamily="@font/poppinslight"
            android:inputType="textPersonName"
            android:text="12:00 - 13:00"
            android:textColor="@color/Gris"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nombreMecanico" />

        <ImageButton
            android:layout_width="51dp"
            android:layout_height="42dp"
            android:src="@drawable/flecha"
            android:tint="@color/rojoOscuro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UseAppTint,SpeakableTextPresentCheck" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>